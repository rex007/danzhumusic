<article class="small-12">
  <%= image_tag 'body_frame.png', class:"welcome_events" %>
      <div class="large-8 small-8 push-1 radius">
        <div class="row">
          <div class="large-12 mobile_news">
            <div class="large-4 small-4">  
              <h4 class="main_title_blog"><%= @blog.title %></h4><hr>
            </div>
            <div class="large-12 small-12">
              <div class="row">
                <div class="large-4 small-4 columns">
                  <%= image_tag @blog.image.url(:welcome_blog).to_s %>
                </div>
                <div class="large-8 small-8 columns">
                  <p><%= @blog.description %></p>
                </div>
              </div>
              <div class="large-5 small-12 push-7">
                <h6 style="">Written on <%= @blog.updated_at.strftime('%b %d, %Y') %></h6>
              </div>
            </div>
          </div>
        </div>      
      </div>
      <div class="large-12">
      	<div class="large-2 push-1">
      		<%= link_to "Back", home_path %>
      	</div>
      </div>
</article>
