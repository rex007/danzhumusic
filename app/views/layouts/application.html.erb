<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "DanZhu Music" %></title>

  	<%= stylesheet_link_tag    "application", "mobile" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body class="<%= controller.controller_name %>">
    <!-- admin CP -->
      <%=  render 'layouts/admin' %>
    <!-- end admin CP -->
    <!-- mobile nav menu -->
    <div class="content_to_grid">
      <nav class="top-bar">
        <ul class="title-area">
      <!-- Title Area -->
          <li class="name">
            <h1><a href="#">DanZhu Music</a></h1>
          </li>
          <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
        </ul>
        <section class="top-bar-section">
                <ul class="left">
                  <li><%= link_to 'Welcome', home_path, class: "button round" %></li>
                  <li><%= link_to 'Bio', bios_path, class: "button round" %></li>
                  <li><%= link_to 'Performances', performances_path, class: "button round" %></li>
                  <li><a class="button round">Media</a></li>
                  <li><%= link_to 'News', blogs_path, class: "button round" %></li>
                  <li><%= link_to "Contact", contact_path, class: "button round" %></li>
                </ul>
        </section>
      </nav>
    </div>
    <!-- end mobile nav menu -->
    <!-- header content -->
  
    <header>
      <div class="row">
        <div class="large-8 columns mobile_header">
          <div class="relative">
            <%= image_tag 'header_bg1.png', class: 'header_bg1' %>
            <%= image_tag 'header_bg2.png', class: 'header_bg1' %>
            <%= image_tag 'header_bg3.png', class: 'header_bg1' %>
            <%= image_tag 'header_bg4.png', class: 'header_bg1' %>   
            <%= image_tag 'header_bg5.png', class: 'header_bg1' %>
            <%= image_tag 'header_bg6.png', class: 'header_bg1' %>
            <%= image_tag 'header_bg7.png', class: 'header_bg1' %>
            <%= image_tag 'header_bg8.png', class: 'header_bg1' %>
            <%= image_tag 'header_bg9.png', class: 'header_bg1' %>
          </div>      
        </div>
        <div class="large-4 columns logo">
          <div class="relative logo">
            <%= image_tag 'header_logo.png', class: 'start_logo' %>
            <%= image_tag 'header_name.png', class: 'start_name' %>
          </div>
        </div>
      </div>
    </header>

    <!-- end header content -->

    <!-- main content -->

    <div class="row">
      <div class="large-12 menu columns">
        <nav class="nav_left large-menu">
                <ul class="left">
                  <%= link_to 'Welcome', home_path, class: "button round" %>
                  <%= link_to 'Bio', bios_path, class: "button round" %>
                  <%= link_to 'Performances', performances_path, class: "button round" %>
                </ul>
        </nav>
        <nav class="nav_right large-menu">
                <ul class='right'>
                  <a class="button round">Media</a>
                  <%= link_to 'News', blogs_path, class: "button round" %>
                  <%= link_to "Contact", contact_path, class: "button round" %>
                </ul>
        </nav>
            <%= image_tag 'header_violin.png', class: 'header_violin' %>
      </div>

      <div class="large-12 columns"><br/>
        <%= yield %>
      </div>
    </div><br/>

    <!-- end main content -->
    <!-- footer -->

    <footer>
      <div class="row"></div>
      <div class="large-12 footer_up"></div>
      <div class="large-1 small-12 push-6 footer">
        <h6 style="color:white">ProteusLab</h6>
      </div>
    </footer>

    <!-- end footer -->
    
    <%= javascript_include_tag "application" %>
  </body>
</html>
