<div class="row">
 
    <!-- Contact Details -->
    <div class="large-7 columns  push-2">
      <%= image_tag 'body_frame.png', class:'contact_bg' %>
      <div class="large-6 push-1">
        <h4 style="color:#ff2222;margin-top:6%">Be Expressive !</h4>

      <legend style="color:white">Share your thoughts and Stay in touch.</legend>
            <hr></div>
    <%= form_for(@contact) do |f| %>
      <div class="row">
        <div class="large-5 columns push-1">
          <label for="">Name</label>
          <%= f.text_field :name %>
        </div>
        <div class="large-5 columns pull-1">
          <label for="">Email</label>
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="large-10 push-1">
          <label for="">Subject</label>
          <%= f.text_field :subject, cols: "30", rows: "10" %>
      </div>
    <% end %>
    </div>
</div>

